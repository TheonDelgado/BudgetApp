@model AddTransactionViewModel

@{
  List<SelectListItem> list = new List<SelectListItem>();

    foreach(var category in Model.Categories)
    {
      list.Add(new SelectListItem{ Text = category.CategoryName});
    }
}

<form method="post" asp-action="AddTransaction">
  <div class="form-row align-items-center">
    <div class="col-auto my-1">
      <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Choose category: </label>
      @Html.DropDownListFor(model => model.SelectedCategory, list)
      <label class="sr-only" for="">Name</label>
      @Html.TextBoxFor(model => model.Name)
      <label class="sr-only" for="">Amount</label>
      @Html.TextBoxFor(model => model.Amount)
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </div>
</form>



